<html lang="en">

  <body>
    <header
      class="position-fixed fixed-top bg-white"
      style="border-bottom: 2px solid whitesmoke"
    >
      <div class="container">
	          {{> site-nav}}
      </div>
    </header>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content p-4">
          <div class="modal-body">
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>

            <div class="modal-title mb-4 font-weight-bold text-center h2">
              Join Us
            </div>

            <form>
              <div class="form-group">
                <input
                  type="text"
                  class="form-control my-4"
                  id="modal-firstname"
                  aria-describedby="emailHelp"
                  placeholder="Enter Name"
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  class="form-control my-4"
                  id="modal-surname"
                  aria-describedby="emailHelp"
                  placeholder="Enter Surname"
                />
              </div>
              <div class="form-group">
                <input
                  type="email"
                  class="form-control my-4"
                  id="modal-email"
                  aria-describedby="emailHelp"
                  placeholder="Enter Email"
                />
              </div>
              <button
                type="button"
                class="btn text-center w-100 h2"
                id="join-us"
                style="background-color: var(--mainColorOrange)"
              >
                Join
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Main section -->
    <main class="my-5 pt-5 text-main">
      <div class="container height-vh">
        <div class="row justify-content-between mt-5">
          <div class="col-12 col-sm-12 col-md-6">
            <h1 class="h2 mt-5" id="about-title"></h1>
            <p class="p-6" id="about-description"></p>
          </div>
          <div class="col-12 col-sm-12 col-md-5 mt-4 d-flex">
            <img
              id="about-img"
              src="/images/Infinity-1s-200px.gif"
              alt="books"
              class="img-fluid"
            />
          </div>
        </div>
      </div>
      <!-- Main-container -->
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="/script/main.js"></script>
  </body>
</html>