<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/style.css" />
<body>
    <div id="loader"></div>
    <header class="position-fixed fixed-top" style="border-bottom: 2px solid whitesmoke">
	      {{> site-nav}}
    </header>
    {{> login-modal}}
    {{> register-modal}}
    <main class="my-5 pt-5 text-main">
        <div class="container height-vh mt-5 pt-5">
            <form action="/contact" method="POST">
                <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="name" placeholder="Name" style="height: 75px;" />
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="surname" placeholder="Surname" style="height: 75px;" />
                </div>
                </div>
                <div class="form-row" >
                <div class="form-group col-md-6">
                    <input type="email" class="form-control" name="email" placeholder="E-mail" style="height: 75px;" />
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="phone" placeholder="Phone" style="height: 75px;" />
                </div>
                <div class="form-group col-md-6">
                <input type="submit" value="Send" class="btn text-white col-12" id="send-button" style="background-color: var(--mainColorOrange); height: 75px; border:1px solid #000" >
                </div>
            </form>
        </div>
    </main>


    <script type="module" src="/script/main.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="/script/main.js"></script>
  </body>
</html>