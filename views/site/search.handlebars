<!DOCTYPE html>
<html lang="en">

<link rel="stylesheet" href="/css/style.css" />
<link rel="stylesheet" href="/css/search.css" />

<body>
  <div id="loader"></div>
  <header class="position-fixed fixed-top" style="border-bottom: 2px solid whitesmoke">
    {{> site-nav}}
  </header>
  {{> login-modal}}
  {{> register-modal}}
  <!-- Main section -->
  <main class="my-5 pt-5 text-main books-section">
    <div class="container height-vh mt-5 pt-5">
      <div class="row justify-content-between pl-3">
        <!-- Search section -->
        <div class="col-12 col-sm-12 col-md-4 pl-0">
          <h2 class="h2 font-weight-bolder">Search</h2>
          <form action="/search" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <input type="search" class="form-control mt-4" placeholder="Book name" style="height: 44px"
                  list="title-choices" id="title" name="search" />
              </div>
              <div class="form-group col-md-6">
                <input class="btn mt-4 w-100 text-white" style="background-color: var(--mainColorOrange); height: 44px"
                  id="searchBook" value="SEARCH" type="submit" />
              </div>
          </form>
        </div>
        <!-- If book is not found display alert message -->
        <div class="col-12 col-md-7 p-4">
          <div class="alert alert-danger d-none" id="display-alert" role="alert">
            The book was not found. Please try again
          </div>
        </div>
      </div>
    </div>

    <div class="container height-vh mt-5 books-container">
      <div class="row d-flex" id="books">
            {{#each books}}
              <div class="card rounded">
                <img
                  src={{imageUrl}}
                  class="card-img-top img-fluid rounded" alt={{bookName}}>
                <div class="card-body text-center rounded">
                  <p class="card-title">{{bookName}}</p>
                  <p class="card-text">{{authorName}}</p>
                  <a href='/catalog/{{_id}}' class="btn btn-primary read-more-btn"
                    data-name={{bookName}}>Read more</a>
                </div>
              </div>
          {{/each}}
      </div>
  </main>


